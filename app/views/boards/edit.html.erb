<%= back_button %>
<h3 class="text-center">Edit Pin</h3>
<div class="container mt-4" align="center">
  <div align="center">

    <div class="col-sm-6">

      <%= form_with(model: @board, class: 'container') do |form| %>
        <div class="row form-group mb-3">
          <div class="col-sm-3">
            <p>Caption:</p>
          </div>
          <div class="col-sm-9">
            <%= form.text_field :title, required: true, class: 'form-control' %>
          </div>
        </div>

        <div class="row form-group mb-3">
          <div class="col-sm-3">
            <p>Description:</p>
            <small>(optional)</small>
          </div>
          <div class="col-sm-9">
            <%= form.text_area :description, class: 'form-control' %>
          </div>
        </div>



        <div class="row form-group mb-5">
          <div class="col-sm-12">
            <%= form.submit value: 'Save', class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>

      <div>
      <%= link_to "Show this board", @board %> |
      <%= link_to "Back to boards", boards_path %>
    </div>

    </div>
  </div>
</div>