<%= back_button %>
<div class="container">

  <div class="row">
    <div class="col-sm-10">
      <h1 class="card-title mt-3"><%= @user.name %></h1>
    </div>
    <div class="col-sm-2">
      <% follow_button @user %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <p class="card-text small">Joined on <%= @user.created_at %></p>
    </div>
  </div>

</div>

<hr class="mt-4"/>

<h4 class="text-center">Posted Pins</h4>

<div class="row row-cols-auto">
  <% Pin.filter_by_user(@user).each do |pin| %>
    <%= render pin %>
  <% end %>
</div>
