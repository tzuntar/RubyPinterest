<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <h3 class="text-center mt-3">User Preferences</h3>

  <div class="container inner-form">
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row form-group mb-3">
      <div class="col-sm-4 text-end">
        <label for="name">Name:</label>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="row form-group mb-3">
      <div class="col-sm-4 text-end">
        <label for="email">E-mail:</label>
      </div>
      <div class="col-sm-8">
        <%= f.email_field :email, autocomplete: 'email', class: 'form-control' %>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="row form-group mb-3">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="row form-group mb-3">
      <div class="col-sm-4 text-end">
        <label for="email">Password:
          <% if @minimum_password_length %>
            <br/>
            <em class="small"><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </label>
      </div>
      <div class="col-sm-8">
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "Leave blank to leave unchanged" %>
      </div>
    </div>

    <div class="row form-group mb-3">
      <div class="col-sm-4 text-end">
        <label for="email">Password Confirmation:</label>
      </div>
      <div class="col-sm-8">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Type the new password again' %>
      </div>
    </div>

    <div class="row form-group mb-3">
      <div class="col-sm-4 text-end">
        <label for="email">Current Password:</label>
      </div>
      <div class="col-sm-8">
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control', placeholder: 'Required to confirm the changes' %>
      </div>
    </div>

    <div class="mb-5 text-center">
      <%= f.submit "Save Changes", class: 'btn btn-primary' %>
    </div>

    <hr/>

    <h5>Danger Zone</h5>

    <div class="row form-group mt-3">
      <div class="col-sm-8">
        <p class="fw-semibold">Close Account</p>
        <p>You can close your account by clicking the button on the right. <em>This action cannot be undone.</em></p>
      </div>
      <div class="col-sm-4">
        <%= button_to "Close Account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %>
      </div>
    </div>

  </div>
<% end %>
